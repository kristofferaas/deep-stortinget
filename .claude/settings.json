{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm install"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm run format:check && pnpm run lint && pnpm run type-check && pnpm run knip"
          }
        ]
      }
    ]
  }
}
